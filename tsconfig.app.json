{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue","src/**/*.tsx", "src/**/*.jsx","src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "jsx": "preserve",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./src/components/*"],
      "@@@/*": ["./src/assets/styles/*"]
    }
  }
}